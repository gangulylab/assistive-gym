<?xml version="1.0" ?>

<robot name="laptop.urdf">
  <material name="Dark Grey">
    <color rgba=".3 .3 .3 1"/>
  </material>
  <material name="Light Grey">
    <color rgba=".5 .5 .5 1"/>
  </material>
  <link name="base_link">
    <!-- <contact>
      <lateral_friction value="1.0"/>
    </contact> -->
    <inertial>
      <mass value="5"/>
      <inertia ixx="1" ixy="0" ixz="0" iyy="1" iyz="0" izz="1"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0.35" rpy = "0 0 0"/>
      <geometry>
			  <mesh filename="body_visual.dae"/>
      </geometry>
      <material name="Dark Grey"/>
    </visual>
    <collision>
      <origin xyz="0 0 .35" rpy = "0 0 0"/>
      <geometry>
			  <mesh filename="body_visual.dae"/>
      </geometry>
    </collision>
    
  </link>
  <link name="screen_link">
    <!-- <contact>
      <lateral_friction value="1.0"/>
    </contact> -->
    <inertial>
      <!-- <origin xyz="0.005 0 .122" rpy="0 0 0"/> -->
      <origin xyz="0.005 0 .50" rpy="1.5 0 0"/>
      <mass value="1"/>
      <inertia ixx="1" ixy="0" ixz="0" iyy="1" iyz="0" izz="1"/>
    </inertial>
    <visual>
      <origin xyz="1.2 0 1.5" rpy="0 1.7 0"/>
      <geometry>
			  <mesh filename="screen_visual.dae"/>
      </geometry>
      <material name="Light Grey"/>
    </visual>
    <collision>
      <origin xyz="1.2 0 1.5" rpy="0 1.7 0"/>
      <geometry>
			  <mesh filename="screen_visual.dae"/>
      </geometry>
    </collision>
  </link>
  <joint name="hinge" type="revolute">
      <parent link="base_link"/>
      <child link="screen_link"/>
      <axis xyz="0 1 0"/>
      <limit lower="0" upper="3.14" effort="100" velocity="100"/>
      <dynamics dampling="0" friction=".01"/>
  </joint>
</robot>